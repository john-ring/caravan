<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body ng-app="caravan" ng-controller="VoiceListener" ng-cloak>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Caravan", "Index", "Home", null, new { @class = "navbar-brand" })
                <div class="navbar-right" ng-controller="Buttons as buttons">
                    <button class="btn btn-primary" ng-click="buttons.addMember()">Add Member</button>
                    <button class="btn btn-primary" ng-click="buttons.startCaravan()">Start Caravan</button>
                    <button class="btn btn-primary" ng-click="buttons.stopCaravan()">Stop Caravan</button>
                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/caravan")
    @RenderSection("scripts", required: false)
</body>
</html>
